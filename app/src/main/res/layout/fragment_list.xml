<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:clickable="true"
    tools:context=".myFragment.ListFragment">

    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="50dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:text="List"
            android:textColor="@color/colorAccent"
            android:textSize="16dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/ll_list_1"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:background="@color/colorAccent"
                android:orientation="horizontal">

            </LinearLayout>

            <TextView
                android:id="@+id/tv_watch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Watch List"
                android:textColor="@color/textColorPrimary"
                android:textStyle="bold"
                android:textSize="20dp"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_list_2"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:background="#16ffd4"
                android:orientation="horizontal">

            </LinearLayout>

            <TextView
                android:id="@+id/tv_watched"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Watched List"
                android:textColor="@color/textColorPrimary"
                android:textStyle="bold"
                android:textSize="20dp"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_list_3"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:background="#ff4f4f"
                android:orientation="horizontal">

            </LinearLayout>

            <TextView
                android:id="@+id/tv_favorites"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Favorites List"
                android:textColor="@color/textColorPrimary"
                android:textStyle="bold"
                android:textSize="20dp"/>
        </FrameLayout>
    </LinearLayout>
</RelativeLayout>