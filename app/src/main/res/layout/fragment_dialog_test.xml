<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".myFragment.DialogFragment"
    android:background="@color/textColorPrimary"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingRight="100dp"
            android:paddingLeft="100dp"
            android:text="At To List"
            android:textAlignment="center"
            android:textColor="@color/textColorPrimary"
            android:textSize="16dp"
            android:textStyle="bold" />
        <LinearLayout
            android:id="@+id/add_to_watch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <ImageView
                android:id="@+id/add_to_watch_imge"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/cancel_24"
                android:padding="10dp"/>
            <TextView
                android:id="@+id/add_to_watch_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:text="text"
                android:textSize="16dp"
                android:padding="4dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/add_watched">
            <ImageView
                android:id="@+id/add_watched_image"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/down_right_24"
                android:padding="10dp"/>
            <TextView
                android:id="@+id/add_watched_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:text="text"
                android:textSize="16dp"
                android:padding="4dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/add_favorites"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <ImageView
                android:id="@+id/add_favorites_iamge"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/down_right_24"
                android:padding="10dp"/>
            <TextView
                android:id="@+id/add_favorites_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:text="text"
                android:textSize="16dp"
                android:padding="4dp"/>
        </LinearLayout>


    </LinearLayout>

</FrameLayout>